<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000"
    tools:context=".activity.RateActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/rate_iv_image"
                            android:layout_weight="1"
                            android:src="@drawable/ic_image"
                            android:layout_width="170dp"
                            android:layout_height="match_parent" />
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/rate_brand"
                                android:layout_marginBottom="2dp"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textSize="18sp"
                                android:fontFamily="@font/sans_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/rate_product"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textSize="16sp"
                                android:fontFamily="@font/sans_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/rate_price"
                                    android:textColor="#1dad01"
                                    android:paddingLeft="10dp"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:fontFamily="@font/sans_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/rate_cross_price"
                                    android:textColor="#f00020"
                                    android:paddingLeft="10dp"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sans_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="25dp"
                                    android:padding="2dp"
                                    android:id="@+id/rate_total_rating_bar"
                                    style="@style/Widget.MaterialRatingBar.RatingBar"/>
                                <TextView
                                    android:id="@+id/rate_total_rate"
                                    android:paddingLeft="10dp"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:fontFamily="@font/sans_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/rate_write"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorAccent"
                            android:gravity="right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sans_bold"
                            android:textSize="16sp"
                            android:text="Write Review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/rate_write_layout"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/sans_regular"
                                    android:textSize="16sp"
                                    android:text="Rate this Product"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="25dp"
                                    android:id="@+id/rate_rating_bar"
                                    style="@style/Widget.MaterialRatingBar.RatingBar"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.libizo.CustomEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Tell us what you think of this Product"
                                    app:libIZO_setFont="@string/sans_regular"
                                    android:inputType="textMultiLine"
                                    android:lines="5"
                                    android:textSize="18sp"
                                    android:maxLines="8"
                                    android:gravity="left|top"
                                    android:id="@+id/rate_et_review"
                                    app:libIZO_setBorderColor="@color/colorEdittext"
                                    app:libIZO_setBorderView="true"
                                    app:libIZO_setCornerRadius="4dp"
                                    app:libIZO_setStrokeWidth="2dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Button
                                    android:background="#FFF"
                                    android:id="@+id/rate_btn_cancel"
                                    android:text="CANCEL"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/sans_bold"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:background="@color/colorPrimaryDark"
                                    android:id="@+id/rate_btn_submit"
                                    android:text="SUBMIT"
                                    android:textColor="#FFF"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/sans_bold"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/review_layout"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/sans_bold"
                                android:text="Reviews :"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <android.support.v7.widget.RecyclerView
                                android:paddingTop="5dp"
                                android:id="@+id/rv_rate"
                                android:clipToPadding="false"
                                android:scrollbars="none"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:id="@+id/rate_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:indicatorColor="@color/colorAccent"
        app:indicatorHeight="7"
        app:indicatorRadius="5"
        app:interval="100" />
</RelativeLayout>