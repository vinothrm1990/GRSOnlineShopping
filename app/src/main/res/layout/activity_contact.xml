<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.ContactActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
               android:layout_margin="20sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/grs_logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        android:text="Phone :"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:text="99426 13334"
                        android:textSize="16sp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        android:text="Address :"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.codesgood.views.JustifiedTextView
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:text="2-A, Valuvar Colony, P&amp;T Nagar Road, Madurai-625017"
                        android:textSize="16sp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        android:text="Opening Time :"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:text="8:30 AM to 10:30 PM"
                        android:textSize="16sp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        android:text="Delivery Time :"
                        android:textSize="18sp"
                        android:fontFamily="@font/sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:text="10:00 AM to 10:00 PM"
                        android:textSize="16sp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>