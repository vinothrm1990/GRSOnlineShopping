<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CartActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#10000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/cart_layout"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/cart_address"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_regular"
                            android:text=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:freezesText="true" />
                        <Button
                            android:id="@+id/cart_btn_change"
                            android:layout_marginRight="5dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/sans_bold"
                            android:textColor="#FFF"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="2"
                            android:text="CHANGE"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="65dp"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_cart"
                        android:clipToPadding="false"
                        android:scrollbars="none"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:background="#FFF"
                android:visibility="gone"
                android:id="@+id/cart_no_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/empty"
                    android:layout_width="100dp"
                    android:layout_height="150dp" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Your Cart is Empty"
                    android:textSize="18sp"
                    android:fontFamily="@font/sans_regular"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAccent"
                    android:id="@+id/cart_btn_continue"
                    android:fontFamily="@font/sans_bold"
                    android:text="CONTINUE SHOPPING"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#f00020"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/sans_regular"
                    android:text="Total Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingBottom="5dp"
                    android:id="@+id/cart_total_amount"
                    android:layout_marginBottom="2dp"
                    android:textColor="#1dad01"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/sans_bold"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/cart_btn_proceed"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/sans_bold"
                android:textColor="#FFF"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:text="PROCEED"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>
    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:id="@+id/cart_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:indicatorColor="@color/colorAccent"
        app:indicatorHeight="7"
        app:indicatorRadius="5"
        app:interval="100" />
</RelativeLayout>